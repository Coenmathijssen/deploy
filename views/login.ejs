<% include partials/header %>
    <link rel="stylesheet" href="styles/_login.css">
</head>
<body class="login">
    <div class="container">
        <img src="./images/logo-white.svg" alt="Logo I'm down.">
        <h1 class="title-xl">Goed om je terug te zien.</h1>
        <p class="body-m">Log in om verder te gaan.</p>
        <div class="error"><p class="body-m white"><%=errorLogin%></p></div>
        <div class="succes"><p class="body-m white"><%=succesRegister%></p></div>
        <form method="POST" action="/login">
            <label for="email">Email</label>
            <input id="email" type="email" name="email" required>
            <br>
            <label for="password">Wachtwoord</label>
            <input id="password" type="password" name="password" required>
            <br>
            <input type="submit" value="Log In">
        </form>
        <a href="/create-account" class="body-m">Nog geen account? <span>Klik dan hier</span></a>
    </div>
</body>
</html>
